<h1><%= translate(:listing, :default => "Listing {{model}}", :model => Product.human_name(:count => @products.size), :count => @products.size, :scope => [:railties, :scaffold]) %></h1>

<table>
  <tr>
    <th><%= Product.human_attribute_name('title') %></th>
    <th><%= Product.human_attribute_name('description') %></th>
    <th><%= Product.human_attribute_name('image_url') %></th>
    <th><%= Product.human_attribute_name('price') %></th>
  </tr>

<% for product in @products %>
  <tr>
    <td><%=h product.title %></td>
    <td><%=h product.description %></td>
    <td><%=h product.image_url %></td>
    <td><%=h product.price %></td>
    <td><%= link_to translate(:show, :default => 'Show', :scope => [:railties, :scaffold]), product %></td>
    <td><%= link_to translate(:edit, :default => 'Edit', :scope => [:railties, :scaffold]), edit_product_path(product) %></td>
    <td><%= link_to translate(:destroy, :default => 'Destroy', :scope => [:railties, :scaffold]), product, :confirm => translate(:confirmation, :default => 'Are you sure?', :scope => [:railties, :scaffold]), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to translate(:new, :default => "New {{model}}", :model => Product.human_name, :scope => [:railties, :scaffold]), new_product_path %>
